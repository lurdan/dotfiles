defencoding utf8

### KeyConfig
escape ^Tt

bind c screen zsh
bind o focus

bind -c app a screen aptitude
bind -c app t screen top
bind ^t command -c app

### Caption
caption always "%{= wk} %-w%{=bu dr}%n %t%{-}%+w %= %{=b wb}%y/%m/%d(%D) %{=b wb}%c"

hardstatus string "[screen %n: %t] %h"

### Color
defbce "on"
term rxvt-256color

### Misc.
startup_message off
autodetach on
vbell off
defscrollback 30000

idle 3600
shell zsh

screen -t mail 1 mutt
screen -t zsh 0

